<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddJournal">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/icon_back_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Period Journal"
        android:textColor="@color/fontdarkcolor"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="23dp"
                android:paddingBottom="100dp"
                tools:context=".ui.AddJournal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Hari, Tanggal"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                     />
                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan hari dan tanggal"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="14dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="16dp"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_blood"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></ImageView>

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:fontFamily="@font/poppins"
                        android:text="Menstruasi Datang"
                        android:textColor="@color/fontdarkcolor"
                        android:textSize="18dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/poppins"
                        android:text="Tidak"
                        android:textSize="16sp"
                        android:track="@drawable/bg_switch"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView24"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/poppins"
                        android:text="Iya"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Suasana Hati"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/btn_mood_0"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_mood_0"
                            android:layout_marginRight="16dp"
                            />
                        <ImageView
                            android:id="@+id/btn_mood_1"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_mood_1"
                            android:layout_marginRight="16dp"
                            />
                        <ImageView
                            android:id="@+id/btn_mood_2"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_mood_2"
                            android:layout_marginRight="16dp"
                            />
                        <ImageView
                            android:id="@+id/btn_mood_3"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_mood_3"
                            android:layout_marginRight="16dp"
                            />
                        <ImageView
                            android:id="@+id/btn_mood_4"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_mood_4"
                            android:layout_marginRight="16dp"
                            />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Cairan Vagina"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioGroup
                            android:id="@+id/rg_cairan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:id="@+id/rb_cairan_bening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Bening"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_cairan_putih"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Putih Susu"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_cairan_coklat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Coklat / Kemerahan"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_cairan_kuning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Kuning Keju / Kehijauan"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                        </RadioGroup>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Aliran Haid"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioGroup
                            android:id="@+id/rg_aliran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:id="@+id/rb_aliran_sedikit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Sedikit"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_aliran_sedang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Sedang"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_aliran_banyak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Banyak"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                        </RadioGroup>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Gejala Fisik"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioGroup
                            android:id="@+id/rg_gejala"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:id="@+id/rb_gejala_kepala"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Sakit Kepala"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_gejala_punggung"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Nyeri Punggung"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_gejala_rahim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Nyeri Rahim"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                        </RadioGroup>
                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Suhu Tubuh"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <EditText
                    android:id="@+id/et_suhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan suhu tubuh"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="14dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Minum Air"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <EditText
                    android:id="@+id/et_minum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan total air yang diminum"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="14dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Olahraga"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioGroup
                            android:id="@+id/rg_olahraga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:id="@+id/rb_olahraga_sedikit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="10 - 30 menit"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_olahraga_sedang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="31 - 60 menit"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                            <RadioButton
                                android:id="@+id/rb_olahraga_banyak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="> 60 menit"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                />
                        </RadioGroup>
                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_save_journal"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="53dp"
                    android:backgroundTint="@color/primarycolor"
                    android:text="Simpan"
                    android:textColor="@color/whitecolor"
                    android:textSize="22sp" />

            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>