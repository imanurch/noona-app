<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileEdit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="23dp"
            tools:context=".ui.ProfileEdit"
            android:paddingBottom="100dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Edit Profil"
                    android:textColor="@color/fontdarkcolor"
                    android:textSize="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="164dp"
                    android:layout_height="164dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/profile_photo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama"
                android:textColor="@color/fontdarkcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_nama" />
            <EditText
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nama"
                android:text="Sahabat Noona"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/poppins_medium"
                android:padding="14dp"
                android:paddingStart="24dp"
                android:textColor="@color/fontdarkcolor"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Email (Tidak bisa dirubah)"
                android:textColor="@color/fontdarkcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/poppins_medium"
                android:padding="14dp"
                android:paddingStart="24dp"
                android:text="sahabatnoona@gmail.com"
                android:textColor="@color/fontlightcolor"
                android:textSize="16dp"
                tools:layout_editor_absoluteY="368dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tanggal Lahir (Contoh: 1 Mei 2000)"
                android:textColor="@color/fontdarkcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_nama" />
            <EditText
                android:id="@+id/et_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan tanggal lahir"
                android:text=""
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/poppins_medium"
                android:padding="14dp"
                android:paddingStart="24dp"
                android:textColor="@color/fontdarkcolor"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Berat Badan (Kg)"
                android:textColor="@color/fontdarkcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />

            <EditText
                android:id="@+id/et_berat_badan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/poppins_medium"
                android:padding="14dp"
                android:paddingStart="24dp"
                android:hint="Masukkan berat badan"
                android:inputType="number"
                android:text=""
                android:textColor="@color/fontdarkcolor"
                android:textSize="16dp"
                tools:layout_editor_absoluteY="368dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tinggi Badan (cm)"
                android:textColor="@color/fontdarkcolor"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />

            <EditText
                android:id="@+id/et_tinggi_badan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:fontFamily="@font/poppins_medium"
                android:padding="14dp"
                android:paddingStart="24dp"
                android:hint="Masukkan tinggi badan"
                android:text=""
                android:inputType="number"
                android:textColor="@color/fontdarkcolor"
                android:textSize="16dp"
                tools:layout_editor_absoluteY="368dp" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:backgroundTint="@color/primarycolor"
                android:fontFamily="@font/poppins_medium"
                android:text="Simpan"
                android:textSize="22dp"
                android:layout_marginTop="52dp"/>
            <TextView
                android:id="@+id/btnBatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_stroke"
                android:fontFamily="@font/poppins_medium"
                android:text="Batal"
                android:textSize="22dp"
                android:textColor="@color/fontdarkcolor"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>